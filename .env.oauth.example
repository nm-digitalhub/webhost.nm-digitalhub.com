# Example .env settings for Google OAuth Mail integration

# Enable Google OAuth mail authentication
GOOGLE_OAUTH_MODE=true

# Path to the Google OAuth JSON credentials file
GOOGLE_OAUTH_JSON_PATH=/var/www/secure-configs/google/client_secret.json

# Use Gmail API instead of SMTP with XOAUTH2 (optional)
GMAIL_API_MODE=false

# Regular mail settings (still required)
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=your-email@gmail.com
MAIL_FROM_NAME="${APP_NAME}"